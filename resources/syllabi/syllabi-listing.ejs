``` {=html}

<%
// Number of columns
const cols = 3;

// Card alignment
const align = "left";

// Borders
const hideBorders = false;

// Image height as a percentage of the card height
const imgHeightPercentage = 60; // Adjust this value as needed
%>

<div class="list grid quarto-listing-cols-<%= cols %>">
  <% for (const item of items) { %>
    <div class="g-col-1" <%= metadataAttrs(item) %>>
      <div class="quarto-grid-item card h-75 <%- `card-${align}` %><%= hideBorders ? ' borderless' : '' %>">
        <div class="card-img-top quarto-card-img" style="height: <%= imgHeightPercentage %>%;">
          <% if (item.image) { %>
            <img src="<%= item.image %>" class="thumbnail-image card-img" style="object-fit: cover; height: 100%;" alt="<%= item['image-alt'] %>">
          <% } else { %>
            <div class="card-img-bg">&nbsp;</div>
          <% } %>
        </div>
        <div class="card-body post-contents" style="padding-bottom: 0; padding-top: 0.5em;">
          <% if (item.title) { %>
            <h5 class="no-anchor card-title listing-title"><%= item.title %></h5>
          <% } %>
          
          <% if(item.categories) { %>
            <div class="project-categories">
                <% for (const cat of item.categories) { %>
                    <div class="project-category"><a href="#category=<%= cat %>">
                            <%= cat %>
                        </a></div>
                    <% } %>
            </div>
            <% } %>
          <% if (item.date) { %>
            <div class="card-text listing-date" style="padding-top: 0.3em; font-size: 18px;"><%= item.date %></div>
          <% } %>

          <% if (item.links) { %>
            <div class="mt-4 d-flex flex-row flex-wrap gap-1 justify-content-left justify-content-sm-start" role="group" aria-label="Links">
              <% for (const link of item.links) { %>
                <a href="<%= link.url %>" class="tags tag">
                  <i class="bi bi-<%= link.icon %> me-1"></i> <%= link.text %>
                </a>
              <% } %>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  <% } %>
</div>


