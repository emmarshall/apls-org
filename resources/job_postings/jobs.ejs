                    </div>
                    <div class="mt-3">
                        <a href="$jobs.url$" class="jobs-btn jobs-btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        </div><!--end col-->
    $endfor$
</div><!--end row-->


